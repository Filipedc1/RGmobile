<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RGmobile.Pages.ProductDetailPage">
    <ContentPage.Content>
        <StackLayout Padding="10,10">
            <Image Source="{Binding Product.Image}" HeightRequest="250" WidthRequest="250"/>
            <StackLayout Orientation="Horizontal">
                <Label Text="{Binding Product.Name}" TextColor="Black" HorizontalOptions="FillAndExpand"/>
                <Label Text="{Binding Product.Price}" TextColor="Black" FontSize="Small"/>
            </StackLayout>
            <Label Text="{Binding Product.Description}" FontSize="Small"/>
            <Button Text="Add To Cart" Command="{Binding AddToCartCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>